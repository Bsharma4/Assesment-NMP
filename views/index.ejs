<%- include('partials/header.ejs') %>

<!-- Adding theme to homepage -->
<style>
    body {
        background-color: #f0f0f0; /* Set background color */
    }
    
    table {
        border-collapse: collapse; /* Collapse table borders */
        width: 80%; /* Set table width */
        margin: auto; /* Center align table */
        border: 2px solid #ccc; /* Add border to table */
    }
    
    th, td {
        border: 1px solid #ddd; /* Add border to table cells */
        padding: 8px; /* Add padding to table cells */
        text-align: left; /* Align text to the left */
    }
    
    th {
        background-color: #f2f2f2; /* Set background color for table header */
    }
    
    a {
        text-decoration: none; /* Remove underline from links */
        color: #007bff; /* Set link color */
    }
    
    a:hover {
        color: #0056b3; /* Change link color on hover */
    }
    
    button {
        background-color: #007bff; /* Set button background color */
        color: white; /* Set button text color */
        border: none; /* Remove button border */
        padding: 8px 12px; /* Add padding to button */
        cursor: pointer; /* Change cursor to pointer on hover */
    }
    
    button:hover {
        background-color: #0056b3; /* Change button background color on hover */
    }
</style>

<div>
    <!-- Display list of board games -->
    <h2 style="text-align: center; position: relative;">
        List of Board Games 
    </h2>
    <div style="text-align: center;">
        <button onclick="window.location.href='/add-game'" style="display: inline-block; margin-top: 20px; margin-bottom: 20px;">Add Game</button>
    </div>  
    <br>
    <div style="text-align: center;"></div>  
    <table>
        <thead>
            <tr>
                <th>Game ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Last Session Date</th>
                <th>Edit Game</th>
            </tr>
        </thead>
        <tbody>
            <% games.forEach(game => { %>
            <tr>
                <td><%= game.id %></td>
                <td><%= game.game_name %></td>
                <td><%= game.description %></td>
                <td><%= game.last_session_date %></td>
                <td><button onclick="window.location.href='/edit-game/<%= game.id %>'">Edit Game</button></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Display list of game sessions -->
<h2 style="text-align: center; position: relative;">
    List of Game Sessions
</h2>
<div style="text-align: center;">
    <button onclick="window.location.href='/add-game-session'" style="display: inline-block; margin-top: 20px; margin-bottom: 20px;">Add Game Session</button>
</div>
<br>
<div style="text-align: center;">
<table>
    <thead>
        <tr>
            <th>Session ID</th>
            <th>Game Name</th>
            <th>Session Date</th>
            <th>Duration</th>
            <th>Players Count</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        <% sessions.forEach(session => { %>
        <tr>
            <td><%= session.id %></td>
            <td><%= session.game_name %></td>
            <td><%= session.session_date %></td>
            <td><%= session.duration %></td>
            <td><%= session.players_count %></td>
            <td><%= session.notes %></td>
        </tr>
        <% }); %>
    </tbody>
</table>
</div>

<%- include('partials/footer.ejs') %>